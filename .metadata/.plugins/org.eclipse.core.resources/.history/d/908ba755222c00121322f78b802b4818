package com.cakefest.core;

import com.badlogic.gdx.graphics.OrthographicCamera;
import com.badlogic.gdx.math.Vector2;
import com.badlogic.gdx.physics.box2d.BodyDef;
import com.badlogic.gdx.physics.box2d.CircleShape;
import com.badlogic.gdx.physics.box2d.FixtureDef;
import com.badlogic.gdx.physics.box2d.World;
import com.badlogic.gdx.physics.box2d.BodyDef.BodyType;

public class Cake extends Krapfen {

	public Cake(World world, OrthographicCamera camera, int rand) {
		super(world, camera, rand);
	}

	
	public void initPhysics(int rand) {
        BodyDef bodyDef = new BodyDef();  
        bodyDef.type = BodyType.DynamicBody;  
        bodyDef.position.set(rand, 140);  
        bodyDef.gravityScale = 60;
        body = world.createBody(bodyDef);  
        CircleShape dynamicCircle = new CircleShape();  
        dynamicCircle.setRadius(16f);
        dynamicCircle.setPosition(new Vector2(16, 16));
        FixtureDef fixtureDef = new FixtureDef();  
        fixtureDef.shape = dynamicCircle;
        fixtureDef.density = 1.0f;  
        fixtureDef.friction = 0.0f;  
        fixtureDef.restitution = 1;  
        fix = body.createFixture(fixtureDef); 
        fix.setUserData(this);
	}
}
